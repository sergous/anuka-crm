modules = ["bash", "bun", "nodejs-24", "bun-1.2"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["redis"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Twenty CRM Frontend"

[[workflows.workflow]]
name = "Twenty CRM Frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd packages/twenty-front && bun ../../node_modules/vite/bin/vite.js --port 5000 --host 0.0.0.0"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "static"
build = ["bun", "run", "build", "--filter=twenty-front"]
publicDir = "packages/twenty-front/build"
